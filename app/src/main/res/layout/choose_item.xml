<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_marginBottom="@dimen/_10sdp"

    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp">
        <ImageView
            android:id="@+id/c_img"
            android:background="@drawable/choosegreen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    
    
    <TextView
        android:id="@+id/c_txt"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_toStartOf="@+id/check"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@+id/card_img"
        android:layout_centerVertical="true"
        android:fontFamily="@font/font_semi"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Walk 6250steps to save  co2e"/>
    <ImageView
        android:id="@+id/check"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/choose_uncheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>



</RelativeLayout>