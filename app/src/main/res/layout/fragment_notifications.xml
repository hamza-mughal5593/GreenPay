<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C2D1"
    tools:context=".activities.Module2.ui.notifications.NotificationsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp">

        <RelativeLayout
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:orientation="vertical"
            android:background="@drawable/card_bg">

            <TextView
                android:id="@+id/anul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/font_med"
                android:text="My annual co2e"
                android:textColor="#95989A"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anul"
                android:fontFamily="@font/font_bold"
                android:text="13289,96 kg"
                android:textColor="#95989A"
                android:textSize="@dimen/_15sdp" />
            <LinearLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="end"
                    android:layout_below="@+id/anul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/make_easier_sustainable_decisions"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/font_med"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_below="@+id/anul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join membership!"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/font_med"
                    android:textColor="#3957D0" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Impact"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/font_med"
            android:textColor="#3957D0" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/p_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            >

            <ProgressBar
                android:id="@+id/circularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/circular_categories" />


            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25%"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:textAlignment="center"
            android:id="@+id/cate_name"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/p_main"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/font_bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Art"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/star"
        android:src="@drawable/u_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/totalact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_bold"
        android:text="3"

        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalact"
        android:fontFamily="@font/font_med"
        android:text="Carbon Action"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />


</RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tree1" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/totaltree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:text="3"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/totaltree"
                    android:fontFamily="@font/font_med"
                    android:text="    Tree"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />


            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#DFE4EC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg">
            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_med"
                android:text="Level 1: Gardener"
                android:textColor="#4D5661"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    </LinearLayout>
</LinearLayout>