<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.Module2.ui.home.HomeFragment">
<androidx.core.widget.NestedScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semi"
                android:text="My Choice"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <TextView

                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_bg"
                android:id="@+id/join_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/font_reg"
                android:gravity="center"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Join membership"
                android:textColor="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pop_btn"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semi"
                    android:text="Popular"

                    android:id="@+id/tv_pop"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12sdp" />
                <View
                    android:id="@+id/line_pop"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="@color/red"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/favbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_semi"
                    android:text="Favorite"
                    android:textColor="@color/graytext"
                    android:textSize="@dimen/_12sdp" />
                <View
                    android:id="@+id/line_fav"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="@color/graytext"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/ver_rec"/>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_med"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Choose Green Action!"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <com.machineries_pk.mrk.activities.Utils.MyRecycler
            android:id="@+id/choose_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>